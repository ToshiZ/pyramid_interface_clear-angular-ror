<p id="notice"><%= notice %></p>

<h1>Listing Ssh Connections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ip</th>
      <th>Login</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ssh_connections.each do |ssh_connection| %>
      <tr>
        <td><%= ssh_connection.name %></td>
        <td><%= ssh_connection.ip %></td>
        <td><%= ssh_connection.login %></td>
        <td><%= link_to 'Show', ssh_connection %></td>
        <td><%= link_to 'Edit', edit_ssh_connection_path(ssh_connection) %></td>
        <td><%= link_to 'Destroy', ssh_connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

