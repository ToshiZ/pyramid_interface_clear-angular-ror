<p id="notice"><%= notice %></p>

<h1>Listing User Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task name</th>
      <th>String</th>
      <th>Status</th>
      <th>String</th>
      <th>Result</th>
      <th>Text</th>
      <th>Info</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_tasks.each do |user_task| %>
      <tr>
        <td><%= user_task.task_name %></td>
        <td><%= user_task.string %></td>
        <td><%= user_task.status %></td>
        <td><%= user_task.string %></td>
        <td><%= user_task.result %></td>
        <td><%= user_task.text %></td>
        <td><%= user_task.info %></td>
        <td><%= user_task.text %></td>
        <td><%= link_to 'Show', user_task %></td>
        <td><%= link_to 'Edit', edit_user_task_path(user_task) %></td>
        <td><%= link_to 'Destroy', user_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

