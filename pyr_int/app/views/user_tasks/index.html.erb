<p id="notice"><%= notice %></p>

<h1>Listing User Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task name</th>
      <th>Mqinfo</th>
      <th>Stdout rez</th>
      <th>Work status</th>
      <th>Errors</th>
      <th>Manager log</th>
      <th>Output</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_tasks.each do |user_task| %>
      <tr>
        <td><%= user_task.task_name %></td>
        <td><%= user_task.mqinfo %></td>
        <td><%= user_task.stdout_rez %></td>
        <td><%= user_task.work_status %></td>
        <td><%= user_task.errors %></td>
        <td><%= user_task.manager_log %></td>
        <td><%= user_task.output %></td>
        <td><%= user_task.status %></td>
        <td><%= link_to 'Show', user_task %></td>
        <td><%= link_to 'Edit', edit_user_task_path(user_task) %></td>
        <td><%= link_to 'Destroy', user_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

